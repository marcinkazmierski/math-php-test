{% extends 'AppBundle::base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>
    <div class="form-group">
        {{ form_label(form.number) }}
        {{ form_widget(form.number, {   'attr': {'class': 'form-control', 'placeholder':'app.form.number'|trans} }) }}
        {{ form_errors(form.number) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.submit, {   'attr': {'class': 'btn btn-primary'} }) }}
    </div>

    {{ form_end(form) }}

{% endblock %}