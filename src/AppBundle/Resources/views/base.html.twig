<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="author" content="Marcin KaÅºmierski">

    {% block stylesheets %}
        {% stylesheets
        '@AppBundle/Resources/public/libs/css/bootstrap.min.css'
        '@AppBundle/Resources/public/libs/css/*'
        output='css/compiled/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
</head>
<body class="{% block body_classes %}{% endblock %}">
<div class="flash-messages">
    {% set flashbag = app.session.flashbag.all() %}
    {% if flashbag is not empty %}
        <div class="container">
            <div class="row margin-top">
                <div class="col-sm-12">
                    {% for type,flash_messages in flashbag %}
                        {% for message in flash_messages %}
                            <div class="alert alert-{{ type }}" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                {{ message|trans }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

{% block body %}{% endblock %}

<footer class="footer">
    <div class="container">
        <p class="text-muted text-center">Place sticky footer content here.</p>
    </div>
</footer>

{% block javascripts %}
    {% javascripts
    '@AppBundle/Resources/public/libs/js/jquery.min.js'
    '@AppBundle/Resources/public/libs/js/*'
    output='js/compiled/main.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>